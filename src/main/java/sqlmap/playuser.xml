<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    <mapper namespace="PlayUser">
    	<resultMap type="PlayUser" id="result">
    		<result property="pid" column="pid"/>
    		<result property="ppass" column="ppass"/>	
    	</resultMap>
    <select id="searchPUId" parameterType="String" resultType="String">
    	select pid from playuser where pid=#{pid}
    </select>	
    <select id="searchPUPass" parameterType="String" resultType="String">
    	select ppass from playuser where pid=#{pid}
    </select>
    </mapper>